Geometry = GenFormat {
<<< "geo_start.gen"
}

Driver = {}

Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1e-8
  MaxSCCIterations = 100
  Mixer = Broyden {
    MixingParameter = 0.2
  }
  MaxAngularMomentum = {
    C = "p"
    H = "s"
  }
  Charge = 0.0
  SpinPolarisation = {}
  Eigensolver = DivideAndConquer {}
  Filling = Fermi {
    Temperature [Kelvin] = 0.0
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }

  ManyBodyDispersion = TS{
    TSEnergyAccuracy = 1e-10
    Params = ts
    TSRangeSep = 0.90
    TSDamp = 20
    Debug=Yes
  }

}

Options = {
  CalculateForces = Yes
  WriteEigenvectors = Yes
  WriteAutotestTag = Yes
  WriteResultsTag = Yes
  #WriteCPA = Yes
}

ParserOptions = {
  ParserVersion = 3
}
