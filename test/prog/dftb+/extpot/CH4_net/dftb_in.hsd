Geometry = GenFormat {
    <<< geo.gen
}

Hamiltonian = DFTB {
    AtomSitePotential {
        Net {
            Atoms = 1 2
            Vext [eV] = 1.5 -0.5
        }
    }
    MaxAngularMomentum {
        C = "p"
        H = "s"
    }
    Charge = 0.0
    Filling = Fermi {
        Temperature [Kelvin] = 100.0
    }
    SlaterKosterFiles = Type2FileNames {
        Separator = "-"
        Suffix = ".skf"
    }
}

Options {
    WriteAutotestTag = Yes
}

Analysis {
    CalculateForces = Yes
}

ParserOptions {
    ParserVersion = 9
}

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}
