############################################################################
# Makefile to compile the package within DFTB+
#
# Receives:
#     ROOT: Root of the source directory
#     BUILDROOT: Root of the build directory
#
############################################################################

include $(ROOT)/make.config

OBJDIR := $(BUILDROOT)/external/mbd
SRCDIR := $(ROOT)/external/mbd
STAMPFILE := $(OBJDIR)/BUILD_TIMESTAMP

.PHONY: all clean libmpifx
all: libmbd
	touch -r $(OBJDIR)/libmbd.a $(STAMPFILE)

libmbd:
	$(MAKE) -C $(OBJDIR) -f $(SRCDIR)/origin/src/scalapack-mpi.make \
	    FXX="$(FXX)" FXXOPT="$(FXXOPT)" VPATH="$(SRCDIR)/origin/src" LIBMBD_C_API=0

clean:
	$(MAKE) -C $(OBJDIR) -f $(SRCDIR)/origin/src/scalapack-mpi.make \
	    FXX="$(FXX)" FXXOPT="$(FXXOPT)" VPATH="$(SRCDIR)/origin/src" LIBMBD_C_API=0 clean

### Local Variables:
### mode:makefile
### End:
